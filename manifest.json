{
    "manifest_version": 2,
    "name": "FB悬浮信息",
    "description": "悬浮显示Facebook公开的个人信息。",
    "author": "dev-coco",
    "version": "1.0.3",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : true
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/*"],
            "js": ["inject.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "permissions": [
      "<all_urls>",
      "tabs",
      "storage",
      "activeTab"
    ]
}



